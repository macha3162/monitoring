= simple_form_for [:admin, @service], :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.error_span :name
  = f.input :permalink
  = f.error_span :permalink
  = f.input :podition
  = f.error_span :podition
  = f.input :service_status_id
  = f.error_span :service_status_id
  = f.input :description
  = f.error_span :description
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_services_path, :class => 'btn btn-default'
