- model_class = Maintenance
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @maintenance.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @maintenance.description
%p
  %strong= model_class.human_attribute_name(:start_at) + ':'
  %br
  = @maintenance.start_at
%p
  %strong= model_class.human_attribute_name(:finish_at) + ':'
  %br
  = @maintenance.finish_at
%p
  %strong= model_class.human_attribute_name(:identifier) + ':'
  %br
  = @maintenance.identifier
%p
  %strong= model_class.human_attribute_name(:length_in_minutes) + ':'
  %br
  = @maintenance.length_in_minutes
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @maintenance.user_id
%p
  %strong= model_class.human_attribute_name(:service_status_id) + ':'
  %br
  = @maintenance.service_status_id


= link_to t('.back', :default => t("helpers.links.back")), admin_maintenances_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_maintenance_path(@maintenance), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_maintenance_path(@maintenance), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
