= simple_form_for [:admin, @maintenance], :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.error_span :title
  = f.input :description
  = f.error_span :description
  = f.input :start_at
  = f.error_span :start_at
  = f.input :finish_at
  = f.error_span :finish_at
  = f.input :identifier
  = f.error_span :identifier
  = f.input :length_in_minutes
  = f.error_span :length_in_minutes
  = f.input :user_id
  = f.error_span :user_id
  = f.input :service_status_id
  = f.error_span :service_status_id
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_maintenances_path, :class => 'btn btn-default'
