- model_class = ServiceStatus
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @service_status.name
%p
  %strong= model_class.human_attribute_name(:permalink) + ':'
  %br
  = @service_status.permalink
%p
  %strong= model_class.human_attribute_name(:color) + ':'
  %br
  = @service_status.color
%p
  %strong= model_class.human_attribute_name(:status_type) + ':'
  %br
  = @service_status.status_type


= link_to t('.back', :default => t("helpers.links.back")), service_statuses_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_service_status_path(@service_status), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), service_status_path(@service_status), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
