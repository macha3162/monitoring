- model_class = IssueUpdate
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:issue_id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:identifier)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @issue_updates.each do |issue_update|
      %tr
        %td= link_to issue_update.id, admin_issue_update_path(issue_update)
        %td= issue_update.state
        %td= issue_update.issue_id
        %td= issue_update.user_id
        %td= issue_update.identifier
        %td= issue_update.description
        %td=l issue_update.created_at
        %td
          = link_to t('.show', :default => t("helpers.links.show")), admin_issue_update_path(issue_update), :class => 'btn btn-default btn-xs'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_issue_update_path(issue_update), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_issue_update_path(issue_update), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_issue_update_path, :class => 'btn btn-primary'
