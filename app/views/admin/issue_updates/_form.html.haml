= simple_form_for [:admin, @issue_update], :html => { :class => 'form-horizontal' } do |f|
  = f.input :state
  = f.error_span :state
  = f.input :issue_id
  = f.error_span :issue_id
  = f.input :user_id
  = f.error_span :user_id
  = f.input :identifier
  = f.error_span :identifier
  = f.input :description
  = f.error_span :description
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_issue_updates_path, :class => 'btn btn-default'
