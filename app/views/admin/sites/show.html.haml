- model_class = Site
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @site.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @site.description
%p
  %strong= model_class.human_attribute_name(:domain) + ':'
  %br
  = @site.domain
%p
  %strong= model_class.human_attribute_name(:http_protocol) + ':'
  %br
  = @site.http_protocol
%p
  %strong= model_class.human_attribute_name(:support_email) + ':'
  %br
  = @site.support_email
%p
  %strong= model_class.human_attribute_name(:website_url) + ':'
  %br
  = @site.website_url
%p
  %strong= model_class.human_attribute_name(:time_zone) + ':'
  %br
  = @site.time_zone


= link_to t('.back', :default => t("helpers.links.back")), admin_sites_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_site_path(@site), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_site_path(@site), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
